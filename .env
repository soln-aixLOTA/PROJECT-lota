# Server Configuration
HOST=127.0.0.1
PORT=8080
RUST_LOG=info

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5433/lota_db?sslmode=prefer
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5433
DB_NAME=lota_db
DB_SSL_MODE=prefer
DB_MAX_CONNECTIONS=5
DB_ACQUIRE_TIMEOUT=3
DB_STATEMENT_TIMEOUT=31
DB_POOL_TIMEOUT=10

# Security Configuration
JWT_SECRET=test_secret_key_for_development_only
JWT_EXPIRY=24h
ENCRYPTION_KEY=change_me_in_production

# CORS Configuration
CORS_ORIGIN=*
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=50

# SSL Configuration
ENABLE_SSL=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Monitoring
METRICS_PORT=9090
ENABLE_TRACING=true
