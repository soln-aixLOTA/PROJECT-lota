# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_MAX_LIFETIME_SECS=1800
DB_IDLE_TIMEOUT_SECS=300

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Server Configuration
PORT=8080
HOST=0.0.0.0
RUST_LOG=info

# Security
# WARNING: Generate a secure random secret for production using:
#   openssl rand -hex 32
# DO NOT use this placeholder in production!
JWT_KEY=DO_NOT_USE
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_RPS=10  # Requests per second per IP

# Request ID
# No additional configuration needed; request IDs are generated automatically

# Storage Configuration
STORAGE_PATH=/absolute/path/to/storage
STORAGE_MAX_FILE_SIZE=10485760  # 10MB in bytes

# Redis Configuration (if needed for session/caching)
REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
