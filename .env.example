# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lotabots
DATABASE_POOL_SIZE=5

# AI Attestation Service
AI_ATTESTATION_HOST=127.0.0.1
AI_ATTESTATION_PORT=8000
AI_ATTESTATION_LOG_LEVEL=info

# Hardware Attestation Service
HARDWARE_ATTESTATION_HOST=127.0.0.1
HARDWARE_ATTESTATION_PORT=8001
HARDWARE_ATTESTATION_LOG_LEVEL=info

# AWS Configuration (for Hardware Attestation)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=lotabots-attestation

# Google Cloud Storage (for Hardware Attestation)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCS_BUCKET=lotabots-attestation-backup

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=lotabots
OTEL_LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your-secret-key
COOKIE_SECRET=your-cookie-secret
SESSION_DURATION_HOURS=24

# Feature Flags
ENABLE_MIG_SUPPORT=false
ENABLE_HARDWARE_ATTESTATION=true
ENABLE_AI_ATTESTATION=true
