# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/lotabots
DATABASE_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-secret-key-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=2592000

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
RUST_LOG=info
RUST_BACKTRACE=1

# Security Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com
ENFORCE_HTTPS=true
HSTS_PRELOAD=true
HSTS_MAX_AGE=31536000

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# Monitoring
TELEMETRY_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_METRICS_ENABLED=true

# Vault Configuration (for production secrets)
VAULT_ADDR=http://vault.lotabots.svc:8200
VAULT_ROLE=api-gateway
VAULT_NAMESPACE=lotabots

# TLS Configuration (for production)
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# Documentation
# DATABASE_URL: PostgreSQL connection string
# DATABASE_POOL_SIZE: Maximum number of database connections
# JWT_SECRET: Secret key for JWT token signing (min 32 characters)
# JWT_ACCESS_TOKEN_EXPIRY: Access token expiry in seconds
# JWT_REFRESH_TOKEN_EXPIRY: Refresh token expiry in seconds
# SERVER_HOST: Server bind address
# SERVER_PORT: Server port number
# RUST_LOG: Logging level (trace, debug, info, warn, error)
# RUST_BACKTRACE: Enable backtrace on panic
# ALLOWED_ORIGINS: Comma-separated list of allowed CORS origins
# ENFORCE_HTTPS: Redirect HTTP to HTTPS
# HSTS_PRELOAD: Enable HSTS preloading
# HSTS_MAX_AGE: HSTS max age in seconds
# REDIS_URL: Redis connection string
# REDIS_POOL_SIZE: Maximum number of Redis connections
# RATE_LIMIT_REQUESTS: Number of requests allowed per duration
# RATE_LIMIT_DURATION: Duration for rate limiting in seconds
# TELEMETRY_ENABLED: Enable OpenTelemetry tracing
# OTEL_EXPORTER_OTLP_ENDPOINT: OpenTelemetry collector endpoint
# PROMETHEUS_METRICS_ENABLED: Enable Prometheus metrics
# VAULT_ADDR: HashiCorp Vault server address
# VAULT_ROLE: Vault authentication role
# VAULT_NAMESPACE: Vault namespace
# TLS_CERT_PATH: Path to TLS certificate file
# TLS_KEY_PATH: Path to TLS private key file
